import java.util.*;

public class NextPrimeAug {
	public static void main(String[] args) {
		Scanner input = new Scanner(System.in);
		int n = input.nextInt();
		
//		System.out.println(isPrime(n));
		System.out.println(nextPrime(n));
		
	}

	public static boolean isPrime(int n) {
		
		int rest = 0;
		boolean notPrime = false;
		
		//
		if( n == 1) {
			return notPrime;
		}
		
		if (n > 0) {
			
			/* The for-loop checks between 1 and n, so that we can see if anything in that span can
			 * be devided by n.
			*/
			for (int i = 2; i < n; i++) {
				
				//The variable rest gets the value of the rest from modulus of every number up to n.
				rest = n % i;
				
				if (rest == 0) {
					
					return notPrime;
					
				} else if ( rest > 0) {
					continue;
				} 
				
				return true;
				
			}
					
		}  else {
			return notPrime;
		}
		
		return true;
	
	}
	
	public static int nextPrime(int n) {
		
		int nextPrime = 1;
		for (int i = n + 1; i < n+10000; i++) {
			
			//
			if (isPrime(i) == true) {
				
				nextPrime = i;
				break;
				
			} else if (n == 1) {
				
				nextPrime = i;
				break;
			
			} else {

				continue;

			}
						
		}
		
		return nextPrime;

	}

}
